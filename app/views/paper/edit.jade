h1 Edit

form(method="post",action="/paper")
  div.span-24
    label Referee Email
    br
    input(type="text", name="paper[position]", value=paper.position)
  div.span-24
    label Personal Message
    br
    textarea(name="email_body")
  div.span-24
    div.span-5
      Label Start Date
      br
      input(type="date", name="paper[end_date]", value=paper.end_date)
    div.span-5.last
      Label End Date
      br
      input(type="date", name="paper[start_date]", value=paper.start_date)
    input(type="text", name="paper[candidate_Id]", value=session.user._id) hidden

  div.span-24
    button.button.standard(type="submit")
      | Submit

