h1 Edit Reference

form(method="post", action="/reference/"+reference._id+"/edit")
  div.span-24
    label Position
    br
    input(type="text", name="reference[position]", value=reference.position)
  div.span-24
    label Reference Body
    br
    textarea(name="reference[body]", value=reference.body)
  div.span-24
    div.span-5
      Label Start Date
      br
      input(type="date", name="reference[end_date]" , value=reference.end_date)
    div.span-5.last
      Label End Date
      br
      input(type="date", name="reference[start_date]" , value=reference.start_date)
    input(type="text", name="reference[_id]", value=reference._id).hidden
  div.span-24
    button.button.standard(type="submit")
      | Submit
